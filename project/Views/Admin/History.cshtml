@model IEnumerable<project.Models.Borrow>

@{
    ViewBag.Title = "History";
    Layout = "~/Views/Shared/_AdminLayoutPage1.cshtml";
}
<body style="background-color: #778899; ">
    <h2 style="font-weight: 700; color: #003300; ">Customer History</h2>

    @*<p>
            @Html.ActionLink("Create New", "Create")
        </p>*@
    <table class="table" border="4px" bordercolor="black" style="background-color: #e6f9ff; ">
        <tr>
            <th>
                    @Html.DisplayNameFor(model => model.Book_Name)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Book_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Borrow_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Return_Date)
            </th>
           
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Book_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Book_ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer_ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Borrow_Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Return_Date)
                </td>
                
            </tr>
        }

    </table>
    </br>
    <div style="font-size: 15px; font-weight: 600; background-color: #ffffcc; padding: 8px; margin-left: 20px; margin-right: 1067px; padding-top: 3px; padding-bottom: 3px; border: 1px solid black;">
        @Html.ActionLink("Back", "Index")
    </div>
    </br></br>

</body>