<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Library Website Somewhere</title> @*Page Title*@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Library", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    @if (Session["UserName"] != null)
                    {
                        <li style="font-size: 17px;">@Html.ActionLink("Customer", "Index", "Admin")</li>
                        <li style="font-size: 17px;">@Html.ActionLink("Books", "Index", "Book")</li>
                        <li class="nav-item dropdown" style=" font-size:17px;">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background-color: #222222;">
                                Borrow
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown" style="background-color: #222222; text-align: center; margin-top: 0.03rem; min-width: 7.5rem; padding: 0.8rem;  ">
                                <a class="dropdown-item" href="/Borrow/show" style="padding-left: 5px; padding-right: 5px; color: white; font-size: 15px; display: block; ">History</a>
                                <br>
                                <a class="dropdown-item" href="/Borrow/Index" style="padding-left: 5px; padding-right: 5px; color: white; font-size: 15px; display: block;  ">Update</a>
                            </div>
                        </li>
                        <li style="font-size: 17px;">@Html.ActionLink("Logout", "Logout", "Customer")</li>
                        <li><p style="color:darkgreen;padding-top:14px; padding-left:50px; font-weight:bold; font-size:18px;">Welcome @Session["UserName"]</p></li>
                    }
                    else
                    {
                        <li style="font-size: 17px;">@Html.ActionLink("Login", "Login", "Customer")</li>
                    }
                </ul>
                <form class="form-inline my-2 my-lg-0" style="text-align:right; margin-top:8px;">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

        <footer>
            <p>&copy; @DateTime.Now.Year - Library Website</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
